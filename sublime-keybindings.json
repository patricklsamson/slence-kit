[
  //SUBLIME KEYBINDINGS
  //Preferences > Key Bindings
  //Copy command below and paste in "Default (Windows).sublime-keymap -- User"
  {
    "keys": ["shift+alt+f"],
    "command": "multicommand",
    "args": {
      "commands": [
        {
          "command": "lsp_format_document",
          "context": [{ "key": "setting.lsp_active" }]
        },
        {
          "command": "js_prettier"
        }
      ]
    }
  },
  { "keys": ["shift+f5"], "command": "beautify_ruby" },
  //  OPTIONAL
  {
    "keys": ["shift+f5"],
    "command": "reindent",
    "args": { "single_line": false }
  }
]
